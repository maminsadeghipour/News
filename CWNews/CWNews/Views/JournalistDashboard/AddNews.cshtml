@model CWNews.Models.ModelViews.NewsModelView
@{
    var categories = ViewBag.Categories;
}

<form asp-controller="JournalistDashboard" asp-action="AddNews" enctype="multipart/form-data" method="post">

    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" type="text" class="form-control" placeholder="">
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea class="form-control" asp-for="Description" rows="3"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Picture"></label>
        <input asp-for="Picture" type="file" class="form-control" />
    </div>


    <div class="form-group">
        <label asp-for="CategoryId"></label>
        <select asp-for="CategoryId" class="form-control">
            <option>انتخاب</option>
            @foreach (var category in categories)
            {
                <option value="@category.Id">@category.Title</option>
            }

        </select>
    </div>



    <button type="submit" class="btn btn-success">بارگزاری</button>
</form>
